@model List<Lab2.Models.NavItem>
@{
}

<!-- Begin Top nav -->
<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
    <!-- Navbar Brand-->
    <a class="navbar-brand ps-3" href="">Management System</a>
    <!-- Sidebar Toggle-->
    <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
    @{
        // Lấy sort từ query string
        var currentSort = Context.Request.Query["sort"].ToString();
        if (string.IsNullOrEmpty(currentSort)) currentSort = "asc";
        var toggleSort = currentSort == "asc" ? "desc" : "asc";
    }
    <!-- Sort toggle button -->
    <a class="btn btn-outline-light ms-3" href="?sort=@toggleSort">
        Sort @(toggleSort == "asc" ? "Ascending" : "Descending")
    </a>
    <ul class="nav mt-2">
        @foreach (var item in Model)
        {
            <li class="nav-item">
                <a class="nav-link text-light" href="@item.Url">@item.Title</a>
            </li>
        }
    </ul>
    <!-- Navbar Search-->
    <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0"
          method="get" asp-route="SearchStudent">
        <div class="input-group">
            <input class="form-control" name="keyword" type="text" placeholder="Search by ID or Name..." />
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>
    <!-- Navbar-->
    <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="#!">Settings</a></li>
                <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" href="#!">Logout</a></li>
            </ul>
        </li>
    </ul>
</nav>
